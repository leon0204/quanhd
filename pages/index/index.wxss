/* pages/detail/detail.wxss */

.serach {
  width: 100%;
  height: 64rpx;
  background:linear-gradient(to right,red,blue);
}
.serach-inner {
  width: 95%;
  height: 46rpx;
  margin-top:10rpx;
  margin-left:20rpx;
  /* background-color: transparent; */
  background: hsla(0, 0%, 100%, .6);
  border-radius: 4px;
}
.serach-input {
  text-align: center;
  color: #ffffff;
  font-size:17px;
}

.serach-input-button{
  width: 12px;
  height: 12px;
}
.channel {
  width: 100%;
  height: 44rpx;
  background-color: white;
}
.channel p {
  margin-left:28px;
  font-size:16px;
  font-weight:40px;
}
.banner {
  width: 100%;
  height: 120px;
  background-color: white;
}
.banner-img{
  width:94%;
  height:90%;
  margin-left:11px;
  margin-top:5px;
  border-radius:2px;

}
.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: stretch;
  width: 100%;
  height: 90%;
  background-color: white;


}

.list-item{
  display: flex;
   width:94%;
  margin-bottom: 10px;
  border-bottom:1px solid rgba(128, 128, 128, 0.364);
}

.list-item-right{
  display: flex;
  flex-direction:column;
  /* align-items:center; */
  margin-left: 1px;
}

.list-item-top{
  overflow:hidden;
  height:156rpx;
}

.list-item-top image{
  width: 32rpx;
  height: 32rpx;
  border-radius: 2px;
}

.list-item-mid{
  display:flex;
  height:48rpx;
  font-size:28rpx;
  color:grey;
}

.buy-count{
  margin-left: auto;
}

.list-item-price{
   display: flex;
   /* margin-top: 54rpx; */
}

.price-after{
  color:red;
  margin-left:10rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.ticket{
  margin-left:auto;
  background:linear-gradient(to right,rgb(202, 89, 24),rgb(209, 3, 3));
  font-size:18px;
  font-weight: bold;
  color:#FFF;
  padding:0 6px;
  float:left;
  height:24px;
}

.list-imgOne{
  width: 260rpx;
  height: 260rpx;
  border-radius: 4rpx;
}

.container1 {
  display: flex;
  flex-direction: column;
  /* column direction 所以是竖直方向是主轴，如果是row 则水平是主轴 */
  justify-content: flex-start;
  /* 交叉轴 */
  /* align-items: flex-start; */
  align-items: center;
  /* height: 667px; */
  background-color: #999999;
}